<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TabHost
        android:id="@+id/tbhconversor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/tablongitud"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Elementos de interfaz para la conversión de longitud -->
                    <Spinner
                        android:id="@+id/spnDelongitud"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/spnLongitud"/>
                    <Spinner
                        android:id="@+id/spnAlongitud"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/spnLongitud"/>
                    <EditText
                        android:id="@+id/txtCantidadLongitud"
                        android:layout_below="@+id/spnAlongitud"
                        android:inputType="numberDecimal"
                        android:layout_marginTop="40dp"
                        android:hint="Cantidad a convertir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btnConvertirLongitud"
                        android:layout_below="@+id/txtCantidadLongitud"
                        android:layout_marginTop="40dp"
                        android:text="Convertir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tabalmacenamiento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Elementos de interfaz para la conversión de almacenamiento -->
                    <Spinner
                        android:id="@+id/spnDeAlmacenamiento"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/spnAlmacenamiento"/>

                    <Spinner
                        android:id="@+id/spnAAlmacenamiento"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/spnAlmacenamiento"/>

                    <EditText
                        android:id="@+id/txtCantidadAlmacenamiento"
                        android:layout_below="@+id/spnAAlmacenamiento"
                        android:inputType="numberDecimal"
                        android:layout_marginTop="40dp"
                        android:hint="Cantidad a convertir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/btnConvertirAlmacenamiento"
                        android:layout_below="@+id/txtCantidadAlmacenamiento"
                        android:layout_marginTop="40dp"
                        android:text="Convertir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tabmonedas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Elementos de interfaz para la conversión de monedas -->
                    <Spinner
                        android:id="@+id/spnDeMonedas"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/spnMonedas"/>

                    <Spinner
                        android:id="@+id/spnAMonedas"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/spnMonedas"/>

                    <EditText
                        android:id="@+id/txtCantidadMonedas"
                        android:layout_below="@+id/spnAMonedas"
                        android:inputType="numberDecimal"
                        android:layout_marginTop="40dp"
                        android:hint="Cantidad a convertir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/btnConvertirMonedas"
                        android:layout_below="@+id/txtCantidadMonedas"
                        android:layout_marginTop="40dp"
                        android:text="Convertir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
</RelativeLayout>